<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.myjavafx.controller.UploadController" spacing="30" alignment="CENTER" >

    <Label text="📁 上传 .docx 或 .tex 文件" style="-fx-font-size: 20px;"/>

    <Label fx:id="fileNameLabel" text="未选择文件" />

    <HBox spacing="15" alignment="CENTER">
        <Button text="选择文件" onAction="#handleFileChoose" prefWidth="160" prefHeight="40"/>
        <!--<Button text="重新上传" onAction="#handleReupload"/>-->
        <Button text="删除文件" onAction="#handleDelete" prefWidth="160" prefHeight="40" styleClass="button-delete"/>
    </HBox>

    <ProgressBar fx:id="progressBar" prefWidth="300" visible="false"/>

    <Label fx:id="statusLabel" text="" style="-fx-text-fill: green"/>
</VBox>


